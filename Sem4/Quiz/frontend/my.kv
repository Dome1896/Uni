#:kivy 1.0.9
ScreenManager:
    LoginWindow:
    MainWindow:
    AddQuestionsWindow:
    QuizWindow:

<MainWindow>:
    name: "main"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 5/255,0/255,25/255,1
            Rectangle:
                pos: self.pos
                size:self.size
        Image:
            source: "logoo.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            size_hint:( 0.35,0.35)

        Image:
            source: "sb.jpg"
            pos_hint: {"center_y": 0.9}
            size_hint:(0.2,0.2)

        Button:
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            size_hint:(0.25,0.07)
            background_color: 0,0,0,0
            on_release:
                app.root.current = "quiz"
                root.manager.transition.direction = "left"
            Image:
                source: "button.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size:(200,200)

        Button:
            pos_hint: {"center_x": 0.5, "center_y": 0.15}
            size_hint:(0.2,0.05)
            background_color: 0,0,0,0
            on_release:
                app.root.current = "addQuestions"
                root.manager.transition.direction = "up"
            Image:
                source: "add_questions.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size:(175,175)   
        Label:
            id: welcome_msg
            text: "Hallo Dominik, du wiegst aktuell 120KG!"
            font_name: "Impact"
            pos_hint: {"center_x": 0.5, "center_y": 0.42}

        Button:
            pos_hint: {"center_x": 0, "center_y": 0.5}
            size_hint:(0.1,0.1)
            on_release: 
                app.root.current = "login"
                root.manager.transition.direction = "right"

<LoginWindow>:
    name: "login"
    canvas.before:
        Color:
            rgba: 5/255,0/255,25/255,1
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        Image:
            source: "zicke.jpg"
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            size_hint:( 0.45,0.45)
        Label:
            id: slogan_msg
            text: "Quizy â€“ Intelligente Unterhaltung."
            font_name: "Impact"
            pos_hint: {"center_x": 0.5, "center_y": 0.52}  
        TextInput:
            id: username
            hint_text: "Enter Username"
            pos_hint: {'center_x': 0.5, 'y': 0.35}
            size_hint: 0.25, 0.1
        
        TextInput:
            id: password
            hint_text: "Enter Password"
            pos_hint: {'center_x': 0.5, 'y': 0.2}
            size_hint: 0.25, 0.1
        Button:
            id: signupButton
            text: "Sign Up"
            pos_hint: {"center_x": 1, "center_y": 0.5}
            size_hint:(0.2,0.1)
            on_release: app.show_register_popup()
        Button: 
            pos_hint:{"center_x": 0.5 , "center_y": 0.1}
            size_hint:(0.1,0.05)
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "left"

<PopupRegister>:
    title: "Register"
    size_hint: 0.75, 0.75
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        TextInput:
            id: username
            hint_text: "Enter Username"
            size_hint_y: None
            height: 40
        TextInput:
            id: password
            hint_text: "Enter Password"
            size_hint_y: None
            height: 40
        Button:
            id: addUser
            text: "Sign Up"
            size_hint_y: None
            height: 40
            on_release: root.dismiss()

<AddQuestionsWindow>:
    name: "addQuestions"
    canvas.before:
        Color:
            rgba: 5/255,0/255,25/255,1
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        Image:
            source: "logoo.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            size_hint:( 0.35,0.35)
        Button:
            pos_hint: {"center_x": 0.5, "center_y": 0.03}
            size_hint:(0.1,0.05)
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "down"
        TextInput:
            id: frageTitel_input
            hint_text: "Titel der Frage eingeben"
            pos_hint: {'center_x': 0.5, 'y': 0.4}
            size_hint: 0.25, 0.1
        TextInput:
            id: frage_input
            hint_text: "Frage eingeben"
            pos_hint: {'center_x': 0.5, 'y': 0.25}
            size_hint: 0.25, 0.1
        TextInput:
            id: antwort_input
            hint_text: "Antwort eingeben"
            pos_hint: {'center_x': 0.5, 'y': 0.1}
            size_hint: 0.25, 0.1

<QuizWindow>:
    name: "quiz"
    canvas.before:
        Color:
            rgba: 5/255,0/255,25/255,1
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        Image:
            source: "logoo.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            size_hint:( 0.2,0.2)
        Label:
            id: frageTitel_input
            text: "FrageTitel"
            font_name: "Impact"
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            font_size: 28
        Label:
            id: frage_input
            text: "Frage"
            font_name: "Impact"
            pos_hint: {"center_x": 0.5, "center_y": 0.47} 
            font_size: 28  
        TextInput:
            id: Quiz_antwort_input
            hint_text: "Antwort eingeben"
            pos_hint: {'center_x': 0.5, 'y': 0.2}
            size_hint: 0.25, 0.1
        Button:
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            size_hint:(0.1,0.05)
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"